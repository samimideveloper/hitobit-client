{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "checkJs": false,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["src/**/*", "../custom.d.ts", "src/customLocale.d.ts"],
  "exclude": ["node_modules", "dist"]
}
